PORT=8080

# PostgreSQL connection pieces
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=seb_db
DB_SSLMODE=disable

# JWT settings
JWT_SECRET=supersecret_change_me
JWT_EXPIRES_IN=60
# Access/Refresh tokens
ACCESS_TOKEN_TTL_MINUTES=15
REFRESH_TOKEN_TTL_DAYS=30
REFRESH_JWT_SECRET=

# Initial admin seed (if no admin exists)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
ADMIN_FULL_NAME=Administrator

# SDUI / Remote Config
LAYOUT_VERSION=1
MIN_APP_VERSION_ANDROID=1
MIN_APP_VERSION_IOS=1
SDUI_HMAC_SECRET=

# Moodle SSO / OAuth
MOODLE_SSO_CLIENT_ID=your-client-id
MOODLE_SSO_CLIENT_SECRET=your-client-secret
MOODLE_SSO_LOGIN_URL=https://moodle.example.com/auth/customsso.php
MOODLE_SSO_SECRET=change_me_sso_secret
